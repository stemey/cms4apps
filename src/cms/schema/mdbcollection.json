{
	"id": "/mdbcollection",
	"description": "meta model for mongodb collection",
	"editor": "verticalgroup",
	"groups": [
		{
			"code": "general",
			"label": "General",
			"editor":"columnsgroup",
			"region":"top",
			"attributes": [
				{
					"code": "name",
					"type": "string",
					"required": true
				},
				{
					"code": "collection",
					"type": "string",
					"required": true
				},
				{
					"code": "_id",
					"type": "string",
					"disabled": true
				}
			]
		},
		{
			"code": "schema",
			"region":"center",
			"label": "schema",
			"attributes": [
				{
					"type": "object",
					"code":"schema",
					"typeProperty": "schemaType",
					"nullLabel":"no schema",
					"groups": [
						{
							"code": "multi-schema",
							"label":"multiple schemas",
							"attributes": [
								{
									"code": "typeProperty",
									"type": "string",
									"required": true
								},
								{
									"code": "schemas",
									"type": "array",
									"minItems": 1,
									"element": {
										"type": "ref",
										"schemaUrl": "/mdbschema",
										"url": "/mdbschema"
									}
								}
							]
						},
						{
							"code": "single-schema",
							"label":"single schema",
							"attributes": [
								{
									"code": "schema",
									"type": "ref",
									"schemaUrl": "/mdbschema",
									"url": "/mdbschema"
								}
							]
						}
					]
				}
			]
		}
	]
}
