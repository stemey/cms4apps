{
	"id": "/mdbcollection",
	"description": "meta data for mongodb collection",
	"editor": "verticalgroup",
	"groups": [
		{
			"code": "general",
			"label": "General",
			"editor": "columnsgroup",
			"region": "top",
			"attributes": [
				{
					"code": "name",
					"type": "string",
					"required": true,
					"description": "the name of the collection."
				},
				{
					"code": "collection",
					"type": "string",
					"required": true,
					"description": "the actual name of the mongodb collection."
				},
				{
					"code": "db",
					"type": "string",
					"required": true,
					"description": "the name of the mongodb server."
				},
				{
					"code": "_id",
					"type": "string",
					"disabled": true,
					"description": "the id of this collection meta data."
				}
			]
		},
		{
			"code": "schema",
			"region": "center",
			"editor": "tab",
			"groups": [
				{
					"label": "schema",
					"attributes": [
						{
							"decorator": "inline",
							"code": "assignableId",
							"label": "allow user assigned id ?",
							"type": "boolean",
							"description": "Let the user assign an id."
						},
						{
							"type": "object",
							"code": "schema",
							"typeProperty": "schemaType",
							"nullLabel": "no schema",
							"description": {"#ref": "schemaType.html"},
							"groups": [
								{
									"code": "multi-schema",
									"label": "multiple schemas",
									"editorDescription": {"#ref": "multiSchemaDescription.html"},
									"attributes": [
										{
											"code": "typeProperty",
											"type": "string",
											"required": true,
											"defaultValue": "_type",
											"description": "this property's value refers to its schema"
										},
										{
											"code": "schemas",
											"type": "array",
											"description": {"#ref": "schemas.html"},
											"minItems": 1,
											"initialValueFactory": "/mdbcollection/multi-schema/create",
											"element": {
												"type": "ref",
												"schemaUrl": "/mdbschema",
												"url": "/mdbschema"
											}
										}
									]
								},
								{
									"code": "single-schema",
									"label": "single schema",
									"editorDescription": {"#ref": "singleSchemaDescription.html"},
									"attributes": [
										{
											"initialValueFactory": "/mdbcollection/single-schema/create",
											"code": "schema",
											"type": "ref",
											"required": true,
											"schemaUrl": "/mdbschema",
											"url": "/mdbschema"
										}
									]
								}
							]
						}
					]
				},
				{
					"label": "description",
					"editor": "single",
					"attribute": {
						"code": "description",
						"type": "string",
						"editor": "richtext",
						"extraPlugins": [
							{
								"name": "fontName"
							},
							{
								"name": "foreColor"
							},
							{
								"name": "fontSize"
							}
						]
					}
				}
			]
		}
	]
}
